<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_450dp"
            android:src="@drawable/aboutcoctail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink Name"
            android:textSize="24sp"
            android:padding="@dimen/_0dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:textSize="20sp"
            android:padding="@dimen/_0dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />

        <!-- Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="24sp"
            android:padding="@dimen/_0dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:textSize="20sp"
            android:padding="@dimen/_0dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="24sp"
            android:padding="@dimen/_0dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:textSize="20sp"
            android:padding="@dimen/_0dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />

        <!-- Ingredients and Measures Headers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingredients"
                android:textSize="24sp"
                android:padding="@dimen/_0dp"
                android:textColor="@android:color/holo_purple"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Measures"
                android:textSize="24sp"
                android:padding="@dimen/_0dp"
                android:textColor="@android:color/holo_purple"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Ingredients and Measures Values -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvIngredient1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Vodka"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvIngredient2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Juice"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvIngredient3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Ice"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvIngredient4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sugar"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvIngredient5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Lemon"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvMeasure1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1 oz"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvMeasure2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2 oz"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvMeasure3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3 pcs"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvMeasure4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1 tsp"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvMeasure5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1 slice"
                    android:textSize="20sp"
                    android:padding="@dimen/_0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
